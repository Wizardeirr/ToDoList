<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.volkankelleci.newday.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_eklemeFragment2"
            app:destination="@id/eklemeFragment" />
        <action
            android:id="@+id/action_homeFragment_to_yapilacaklarFragment"
            app:destination="@id/yapilacaklarFragment" />
        <action
            android:id="@+id/action_homeFragment_self2"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/yapilacaklarFragment"
        android:name="com.volkankelleci.newday.YapilacaklarFragment"
        android:label="fragment_yapilacaklar"
        tools:layout="@layout/fragment_yapilacaklar" >
        <action
            android:id="@+id/action_yapilacaklarFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/eklemeFragment"
        android:name="com.volkankelleci.newday.EklemeFragment"
        android:label="fragment_ekleme"
        tools:layout="@layout/fragment_ekleme" >
        <action
            android:id="@+id/action_eklemeFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>